@model EntityLayer.Concrete.Message

@{
    ViewData["Title"] = "Mesaja Baxış";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<div>
    <h4>Mesaja Baxış</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Başlıq
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject)
        </dd>
        <dt class="col-sm-2">
            Mesaj mətni
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Details)
        </dd>
        <dt class="col-sm-2">
            Göndərilmə Tarixi
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedDate.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            Status
        </dt>
        <dd class="col-sm-10">
            @if (Model.Status)
            {
                <span class="badge badge-success ">Aktiv</span>
            }
            else
            {
                <span class="badge badge-danger ">Passiv</span>
            }
        </dd>
        <dt class="col-sm-2">
            Göndərən
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SenderUser.Name)
        </dd>
        <dt class="col-sm-2">
            Qəbul edən
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ReceiverUser.Name)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Inbox" asp-controller="Message" class="btn btn-dark">Gələn mesajlar</a>
</div>
