@model IEnumerable<EntityLayer.Concrete.Blog>

@{
    ViewData["Title"] = "Bloglar";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h4 class="card-title">Sizin Bloglar</h4>
<p class="card-description">
    <a asp-action="Create" class="btn btn-primary">Yeni Blog</a>
</p>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Başlıq
            </th>
            <th>
                Mətn
            </th>
            <th>
                Şəkil(icon)
            </th>
            <th>
                Şəkil
            </th>
            <th>
                Yaradılma tarixi
            </th>
            <th>
                Kateqoriya
            </th>
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td style="max-width: 400px;word-break: break-all; white-space: normal;">
                    @item.Content
                </td>
                <td>
                    @item.ThumbnailImage
                </td>
                <td>
                    @item.Image
                </td>
                <td>
                    @item.CreatedDate.ToShortDateString()
                </td>
                <td>
                    @item.Category.Name
                </td>
                <td>
                    @if (item.Status)
                    {
                        <span class="badge badge-success">Aktiv</span>
                    }
                    else
                    {
                        <span class="badge badge-danger">Passiv</span>
                    }
                </td>
                <td style="font-size:20px">

                    <a asp-action="Edit" asp-route-id="@item.ID" class="text-warning" title="Düzəliş et"><i class="mdi mdi-table-edit"></i> </a> |
                    <button type="submit" class="text-danger ajax_delete" title="Sil" onclick="Delete(@item.ID)"><i class="mdi mdi-delete"></i> </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Default/lib/jquery/dist/jquery.js"></script>

<script>
    function Delete(id) {

        swal({
            title: "Silmək isdədiyinizdən əminsinizmi?",
            text: "Silmə əməliyatı nəticəsində məlumat bir dəfəlik siliməcəkdir!",
            type: "warning",
            showCancelButton: true,
            confirmButtonColor: "#DD6B55",
            confirmButtonText: "Sil",
            cancelButtonText: "Ləğv et",
            closeOnConfirm: false,
            closeOnCancel: false
        }.then(okay => {
            if (okay) {
                window.location.href = "~/Writer/Delete/" + id;
            } else {
                swal("Ləğv edildi", "Məlumat silinmədi", "error");
            }


        };

