<script>
    function Delete(id) {
        var url = "/Writer/Blog/Delete/" + id;
        if (confirm("Silmək isdədiyinizdən əminsinizmi?")) {
            window.open(url, '_self');
        } else {
            window.open('/Writer/Blog', '_self');
        }
    };
</script>

