@model IEnumerable<EntityLayer.Concrete.Blog>

<div class="row">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Son Postlar</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> Şəkil </th>
                                <th> Başlıq </th>
                                <th> Kateqoriya </th>
                                <th> Tarix </th>
                                <th> </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <img src="@item.Image" class="mr-2" alt="image"> 
                                    </td>
                                    <td> @item.Title </td>
                                    <td>
                                        <label class="badge badge-gradient-info">@item.Category.Name</label>
                                    </td>
                                    <td> @item.CreatedDate.ToShortDateString() </td>
                                    <td> <a href="/Blog/Details/@item.ID" class="btn btn-primary" target="_blank">Bloga keçid</a> </td>
                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>