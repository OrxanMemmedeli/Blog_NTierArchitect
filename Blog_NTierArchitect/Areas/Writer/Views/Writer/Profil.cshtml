@model Blog_NTierArchitect.Areas.Writer.Models.ViewModels.WriterDataUpdate
@{
    ViewData["Title"] = "Profil";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<link href="~/writer/assets/css/profil.css" rel="stylesheet" />

<div class="col-xl-12 col-md-12 justify-content-center" style="font-family:'Palatino Linotype'">
    <div class="card user-card-full">
        <div class="row m-l-0 m-r-0">
            <div class="col-sm-4 bg-c-lite-green user-profile">
                <div class="card-block text-center text-white">
                    <div class="m-b-25"> <img src="@Model.Image" class="img-radius" alt="User-Profile-Image" style="max-width:85%"> </div>
                    <h6 class="f-w-600">@Model.Name</h6>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="card-block">
                    <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Məlumatlar</h6>
                    <div class="row">
                        <div class="col-sm-6">
                            <p class="m-b-10 f-w-600">Email</p>
                            <h6 class="text-muted f-w-400">@Model.Email</h6>
                        </div>
                        <div class="col-sm-6">
                            <p class="m-b-10 f-w-600">Status</p>
                            <h6 class="text-muted f-w-400">
                                @if (Model.Status)
                                {
                                    <span class="badge badge-success">Aktiv</span>
                                }
                                else
                                {
                                    <span class="badge badge-danger">Passiv</span>
                                }

                            </h6>
                        </div>
                    </div>
                    <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Haqqımda</h6>
                    <div class="row">
                        <div class="col-sm-12">
                            <p class="m-b-10 f-w-600">@Model.About</p>
                        </div>
                    </div>
                    <ul class="social-link list-unstyled m-t-40 m-b-10">
                        <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                        <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                        <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-12">
                <div class="card-block">
                    <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Məlumatları Yenilə</h6>

                    <form class="forms-sample" asp-action="Profil" asp-controller="Writer" asp-area="Writer" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="ID" value="@Model.ID" />
                        <input type="hidden" asp-for="Image" value="@Model.Image" />
                        <input type="hidden" asp-for="OldPassword" value="@Model.Password" />
                        <input type="hidden" asp-for="Status" value="@Model.Status" />

                        <div class="form-group">
                            <label for="exampleInputName1">Ad və Soyad</label>
                            <input type="text" class="form-control" placeholder="Ad və Soyad" asp-for="Name">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputName1">İstifadəçi Adı</label>
                            <input type="text" class="form-control" placeholder="İstifadəçi Adı" asp-for="UserName">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputEmail3">Email ünvanı</label>
                            <input type="email" class="form-control" asp-for="Email" placeholder="Email ünvanı">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword4">Şifrə <span class="text-danger"><i>Şifrəni dəyişmək istəmədiyiniz zaman müvafiq xananı boş saxlayın</i></span></label>
                            <input type="password" class="form-control" asp-for="Password" placeholder="Yeni Şifrə" value="@null" autocomplete="off">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleInputPassword4">Şifrənin Təkrarı <span class="text-danger"><i>Şifrəni dəyişmək istəmədiyiniz zaman müvafiq xananı boş saxlayın</i></span></label>
                            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Şifrənin Təkrarı ">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label>Plofil şəkli</label>
                            <input type="file" asp-for="ImageFile" class="file-upload-default">
                            <div class="input-group col-xs-12">
                                <input type="text" class="form-control file-upload-info" disabled="" placeholder="Plofil şəkli">
                                <span class="input-group-append">
                                    <button class="file-upload-browse btn btn-gradient-primary" type="button">Yüklə</button>
                                </span>
                            </div>
                            <span asp-validation-for="ImageFile" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="exampleTextarea1">Haqqında yazısı </label>
                            <textarea class="form-control" asp-for="About" rows="10"></textarea>
                            <span asp-validation-for="About" class="text-danger"></span>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <button type="submit" class="btn btn-gradient-primary mr-2">Məlumatları yenilə</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>



<script src="~/writer/assets/vendors/js/vendor.bundle.base.js"></script>
<script src="~/writer/assets/js/file-upload.js"></script>


<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Default/lib/jquery/dist/jquery.js"></script>

@if (TempData["SuccessProfil"] != null)
{
    <script>
        swal("@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(TempData["SuccessProfil"].ToString()))");
    </script>
}