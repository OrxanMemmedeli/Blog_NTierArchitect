@model EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "Kateqoriyanı Yenilə ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Kateqoriyanı Yenilə </h4>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label class="control-label">Kateqoriya</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Açıqlama</label>
                <textarea rows="10" asp-for="Desctiption" class="form-control"></textarea>
                <span asp-validation-for="Desctiption" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Yadda saxla" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Geri</a>
</div>

