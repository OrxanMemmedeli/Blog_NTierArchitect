@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    @await Component.InvokeAsync("LeftMenu")

    <div class="col-lg-9 animated fadeInRight">
        <div class="mail-box-header">
            <h2>
                Yeni mesaj
            </h2>
        </div>
        <div class="mail-box">

            <form method="get">
                <div class="mail-body">
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Alıcı:</label>

                        <div class="col-sm-10"><input type="text" class="form-control" asp-for="ReceiverID"></div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Başlıq:</label>

                        <div class="col-sm-10"><input type="text" class="form-control" asp-for="Subject"></div>
                    </div>


                </div>

                <div class="mail-text h-200">
                    <label class="col-sm-2 col-form-label">Mesaj mətni:</label>

                    <textarea class="form-control" asp-for="Details" style="height:250px"></textarea>
                </div>
                <div class="mail-body text-right tooltip-demo">
                    <button type="submit" class="btn btn-sm btn-primary" title="Göndər"><i class="fa fa-reply"></i>Göndər</button>
                </div>
                <div class="clearfix"></div>
            </form>


        </div>
    </div>
</div>

