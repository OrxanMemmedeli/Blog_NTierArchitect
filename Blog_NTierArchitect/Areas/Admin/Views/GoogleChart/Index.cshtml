
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div id="chartdiv">
            <h2>burada chart olacaq</h2>
        </div>
    </div>
</div>

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>

<script type="text/javascript">

    google.charts.load('current', { 'packeges': ['corecharet'] });
    google.charts.setOnLoadCallback(DrawOnLoad);

    function DrawOnLoad() {
        $(function () {
            $.ajax({
                type: 'GET',
                url: '/Admin/GoogleChart/CollectChartData/',
                success: function (chartsData) {
                    var Data = chartsData.jsonlist;
                    var data = new google.visualization.DataTable();

                    data.addColumn('string', 'Category');
                    data.addColumn('number', 'BlogCount');

                    for (var i = 0; i < Data.length; i++) {
                        data.addRow([Data[i].Category, Data[i].BlogCount]);
                    }

                    var chart = new google.visualization.PieChart(document.getElementById('chartdiv'));

                    chart.draw(data,
                        {
                            title: "Kateqoriyaya uyğun Blog",
                            position: "top",
                            fontsize: "16px"
                        });
                }
            });
        });
    };

</script>