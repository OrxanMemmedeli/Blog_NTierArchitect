@model List<Blog_NTierArchitect.Areas.Admin.Models.CbarViewModel> 
<div class="row">
    <div class="col-lg-12">
        <h3 class="aligncenter text-center">@ViewBag.Description</h3>
    </div>
    <div class="col-lg-2">
        <div class="widget style1 navy-bg">
            <div class="row vertical-align">
                <div class="col-3">
                    <img src="~/pngIcons/platinum (2).png" style="width:40px"/>
                </div>
                <div class="col-12">
                    <h2 class="font-bold">
                        @Model.FirstOrDefault(x => x.Code == "XPT").Value
                    </h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="widget style1 navy-bg">
            <div class="row vertical-align">
                <div class="col-3">
                    <img src="~/pngIcons/gold (2).png" style="width:40px"/>
                </div>
                <div class="col-12">
                    <h2 class="font-bold">@Model.FirstOrDefault(x => x.Code == "XAG").Value</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="widget style1 navy-bg">
            <div class="row vertical-align">
                <div class="col-3">
                    <img src="~/pngIcons/silver (2).png" style="width:40px"/>
                </div>
                <div class="col-12">
                    <h2 class="font-bold">@Model.FirstOrDefault(x => x.Code == "XAU").Value</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="widget style1 lazur-bg">
            <div class="row vertical-align">
                <div class="col-3">
                    <i class="fa fa-dollar fa-3x" style="width:32px"></i>
                </div>
                <div class="col-12">
                    <h2 class="font-bold">@Model.FirstOrDefault(x => x.Code == "USD").Value</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="widget style1 lazur-bg">
            <div class="row vertical-align">
                <div class="col-3">
                    <i class="fa fa-euro fa-3x"></i>
                </div>
                <div class="col-12">
                    <h2 class="font-bold">@Model.FirstOrDefault(x => x.Code == "EUR").Value</h2>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-2">
        <div class="widget style1 yellow-bg">
            <div class="row vertical-align">
                <div class="col-3">
                    <i class="fa fa-turkish-lira fa-3x" style="width:32px"></i>
                </div>
                <div class="col-12">
                    <h2 class="font-bold">@Model.FirstOrDefault(x => x.Code == "TRY").Value</h2>
                </div>
            </div>
        </div>
    </div>
</div>