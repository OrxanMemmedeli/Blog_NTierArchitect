<div class="row">
    <div class="col-lg-6">
        <div class="widget navy-bg no-padding">
            <div class="p-m">
                <h1 class="m-xs">ASP.NET Core 5.0</h1>

                <h3 class="font-bold no-margins">
                    N-Tier Architecture in ASP.NET Core | by KHAN
                </h3>
                <small>Murat Yücedağ tərəfindən pulsuz olaraq Youtube platformu üzərində paylaşılmışdır.</small>
            </div>
            <div class="flot-chart">
                <div class="flot-chart-content" id="flot-chart1"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget lazur-bg no-padding">
            <div class="p-m">
                <h1 class="m-xs">Son Paylaşım</h1>

                <h3 class="font-bold no-margins">
                    @(ViewBag.LastBlog.Title.Length <= 28 ? ViewBag.LastBlog.Title : ViewBag.LastBlog.Title.Substring(0, ViewBag.LastBlog.Title.Substring(0, 28).LastIndexOf(" ")) + "...")
                </h3>
                <small>@(ViewBag.LastBlog.Content.Length <= 50 ? ViewBag.LastBlog.Content : ViewBag.LastBlog.Content.Substring(0, ViewBag.LastBlog.Content.Substring(0, 50).LastIndexOf(" ")) + "...")</small>


            </div>
            <div class="flot-chart">
                <div class="flot-chart-content" id="flot-chart2"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-3">
        <div class="widget yellw-bg no-padding">
            <div class="p-m">
                <h1 class="m-xs">$ 50,992</h1>

                <h3 class="font-bold no-margins">
                    Half-year revenue margin
                </h3>
                <small>Sales marketing.</small>
            </div>
            <div class="flot-chart">
                <div class="flot-chart-content" id="flot-chart3"></div>
            </div>
        </div>
    </div>
</div>