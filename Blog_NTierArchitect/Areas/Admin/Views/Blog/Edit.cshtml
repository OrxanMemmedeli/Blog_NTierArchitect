@model EntityLayer.Concrete.Blog
@{
    ViewData["Title"] = "Bloga Düzəliş et";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4>Bloga Düzəliş et</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" asp-controller="Blog" asp-area="Admin" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <input type="hidden" asp-for="CreatedDate" />
            <input type="hidden" asp-for="WriterID" />
            <input type="hidden" asp-for="ThumbnailImage" />
            <input type="hidden" asp-for="Image" />
            <div class="form-group">
                <label class="control-label">Başlıq</label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Kiçik şəkil</label>
                <input asp-for="ThumbnailImageFile" class="form-control" type="file" />
                <img src="@Model.ThumbnailImage" alt="Kiçik şəkil" style="width:150px" />
                <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Əsas şəkil</label>
                <input asp-for="ImageFile" class="form-control" type="file" />
                <img src="@Model.Image" alt="Əsas şəkil" style="width:150px" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Kateqoriya</label>
                <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
                <span asp-validation-for="CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mətn</label>
                <textarea asp-for="Content" class="form-control" style="height:170px"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Status" /> @Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Yadda saxla" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Geri</a>
</div>


