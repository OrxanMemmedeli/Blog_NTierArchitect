
@{
    ViewData["Title"] = "İstifadəçi şifrəsini yenilə";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h4>İstifadəçi şifrəsini yenilə</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div asp-validation-summary="All" class="text-danger"></div>       
            <input type="hidden" name="id" value="@ViewBag.editPasswordID" />
            <div class="form-group">
                <label class="control-label">Yeni şifrə</label>
                <input name="NewPassword" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Yadda saxla" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-dark">Geri</a>
</div>

