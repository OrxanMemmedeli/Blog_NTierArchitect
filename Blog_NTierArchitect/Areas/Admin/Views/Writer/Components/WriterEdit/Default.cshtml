@model EntityLayer.Concrete.Writer
<div class="modal inmodal fade" id="myModal6" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Yazar məlumatları</h4>
                <small class="font-bold">Yazar məlumatlarının yenilənməsi</small>
            </div>
            <div class="modal-body">
                <form id="writerEditForm" enctype="multipart/form-data">
                    <div class="alert alert-info" id="EditResponce">
                    </div>
                    <div class="row" id="editContent">
                       
                    </div>
                    <div class="form-group">
                        <input type="submit" id="btnEditPost" class="btn btn-primary" value="Yenilə" />
                    </div>
                </form>

            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">Bağla</button>
            </div>
        </div>
    </div>
</div>

