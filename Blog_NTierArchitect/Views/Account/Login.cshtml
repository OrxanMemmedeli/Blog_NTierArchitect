@model UserSignInViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<section class="main-content-w3layouts-agileits">
    <div class="container">
        <h3 class="tittle">Müəllif - Daxil Ol</h3>
        <div class="row inner-sec">
            <div class="login p-5 bg-light mx-auto mw-100">
                <div asp-validation-summary="All" class="text-danger"></div>
                <form asp-action="Login" asp-controller="Account" method="post" asp-route-returnUrl="@ViewBag.ReturnUrl">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label for="exampleInputEmail1 mb-2">İstifadəçi adı</label>
                        <input asp-for="UserName" type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="İstifadəçi adı" required="">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1 mb-2">Şifrəniz</label>
                        <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Şifrəniz" required="">
                    </div>
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="exampleCheck1">
                        <label class="form-check-label" for="exampleCheck1">Məni xatırla</label>
                    </div>
                    <button type="submit" class="btn btn-primary submit mb-4">Daxil ol</button>
                    <p><a href="/Account/Register"> Müəllif hesabın yoxdur?</a></p>
                </form>
            </div>
        </div>
    </div>
</section>

<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Default/lib/jquery/dist/jquery.js"></script>

@if (TempData["LoginMessage"] != null)
{
    <script>
        swal("@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(TempData["LoginMessage"].ToString()))");
    </script>
}