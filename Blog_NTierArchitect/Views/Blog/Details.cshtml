@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewData["Title"] = Model.First().Title;
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

<link rel="stylesheet" href="~/css/single.css">

<ol class="breadcrumb">
    <li class="breadcrumb-item">
        <a href="/">Əsas Səhifə</a>
    </li>
    <li class="breadcrumb-item">
        <a href="/Blog">Blog Yazıları</a>
    </li>
    <li class="breadcrumb-item active">@Model.First().Title</li>
</ol>
@foreach (var item in Model)
{
    <section class="banner-bottom">
        <!--/blog-->
        <div class="container">
            <div class="row">
                <!--left-->
                <div class="col-lg-8 left-blog-info-w3layouts-agileits text-left">
                    <div class="blog-grid-top">
                        <div class="b-grid-top">
                            <div class="blog_info_left_grid">
                                <a>
                                    <img src="@Html.Raw(item.Image)" class="img-fluid" alt="@item.Title" title="@item.Title" style="width:100%; height:auto">
                                </a>
                            </div>
                            <div class="blog-info-middle">
                                <ul style="color:white">
                                    <li>
                                        <a>
                                            <i class="far fa-calendar-alt"></i> @item.CreatedDate.ToString("dd-MMM-yyyy")
                                        </a>
                                    </li>
                                    <li class="mx-2">
                                        <a>
                                            <i class="far fa-thumbs-up"></i> 0 bəyənmə
                                        </a>
                                    </li>
                                    <li>
                                        <a>
                                            <i class="far fa-comment"></i> 0 baxış
                                        </a>
                                    </li>

                                </ul>
                            </div>
                        </div>

                        <h3>
                            @item.Title
                        </h3>
                        <p>
                            @Html.Raw(item.Content)
                        </p>
                    </div>

                    @await Component.InvokeAsync("BlogPageComment", new { id = item.ID })

                    <div class="comment-top">
                        <h4>Yorum yaz</h4>
                        <div class="comment-bottom">
                            <form action="#" method="post">
                                <input class="form-control" type="text" name="Name" placeholder="Name" required="">
                                <input class="form-control" type="email" name="Email" placeholder="Email" required="">

                                <input class="form-control" type="text" name="Subject" placeholder="Subject" required="">

                                <textarea class="form-control" name="Message" placeholder="Message..." required=""></textarea>
                                <button type="submit" class="btn btn-primary submit">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>

                <!--//left-->
                <!--right-->
                <aside class="col-lg-4 agileits-w3ls-right-blog-con text-right">
                    <div class="right-blog-info text-left">
                        <div class="tech-btm">
                            <img src="~/images/email-newsletters-for-marketers.png" class="img-fluid" alt="newsletters" />
                        </div>

                        @await Component.InvokeAsync("BlogPageMailSubscribe", new { id = item.ID })

                        @await Component.InvokeAsync("BlogPageCategory")

                        @await Component.InvokeAsync("BlogPageWriterLastArticles")

                        <div class="single-gd my-5 tech-btm">
                            <h4>Our Progress</h4>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-warning" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <div class="progress">
                                <div class="progress-bar progress-bar-striped bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        <div class="single-gd tech-btm">
                            <h4>Recent Post</h4>
                            <div class="blog-grids">
                                <div class="blog-grid-left">
                                    <a href="single.html">
                                        <img src="~/images/b1.jpg" class="img-fluid" alt="">
                                    </a>
                                </div>
                                <div class="blog-grid-right">

                                    <h5>
                                        <a href="single.html">Pellentesque dui, non felis. Maecenas male</a>
                                    </h5>
                                </div>
                                <div class="clearfix"> </div>
                            </div>
                        </div>
                    </div>

                </aside>
                <!--//right-->
            </div>
        </div>
    </section>

}


<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/Default/lib/jquery/dist/jquery.js"></script>

@if (TempData["SubscribeSuccess"] != null)
{
    <script>
        swal("@Html.Raw(System.Web.HttpUtility.JavaScriptStringEncode(TempData["SubscribeSuccess"].ToString()))");
    </script>
}
