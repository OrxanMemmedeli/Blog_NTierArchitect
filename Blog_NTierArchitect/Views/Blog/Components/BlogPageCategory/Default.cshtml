@model IEnumerable<EntityLayer.Concrete.Category>

<div class="tech-btm">
    <h4>Kateqoriyalar</h4>
    <ul class="list-group single">
        @foreach (var item in Model.OrderByDescending(x => x.Blogs.Count()).ThenBy(x => x.Name))
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @item.Name
                <span class="badge badge-warning badge-pill">@item.Blogs.Count()</span>
            </li>
        }
    </ul>
</div>
