
<div class="comment-top">
    <h4>Yorum yaz</h4>
    <div class="comment-bottom">
        <form asp-action="WriteComment" asp-controller="Comment" method="post">
            @if (TempData["CommentErrors"] != null)
            {
                <span class="text-danger">@TempData["CommentErrors"].ToString()</span>
            }

            <div class="form-group">
                <input type="hidden" name="BlogID" value="@TempData["CommentBlogID"]" />
            </div>

            <div class="form-group">
                <input class="form-control" type="text" name="UserName" placeholder="Ad və Soyadınız" required="" autocomplete="off">
            </div>

            <div class="form-group">
                <input class="form-control" type="text" name="Title" placeholder="Başlıq" required="" autocomplete="off">
            </div>

            <div class="form-group">
                <select name="Score" class="form-control">
                    <option value="1">Blog üzrə dəyərləndirmə balı: 1</option>
                    <option value="2">Blog üzrə dəyərləndirmə balı: 2</option>
                    <option value="3">Blog üzrə dəyərləndirmə balı: 3</option>
                    <option value="4">Blog üzrə dəyərləndirmə balı: 4</option>
                    <option value="5" selected>Blog üzrə dəyərləndirmə balı: 5</option>
                    <option value="6">Blog üzrə dəyərləndirmə balı: 6</option>
                    <option value="7">Blog üzrə dəyərləndirmə balı: 7</option>
                    <option value="8">Blog üzrə dəyərləndirmə balı: 8</option>
                    <option value="9">Blog üzrə dəyərləndirmə balı: 9</option>
                    <option value="10">Blog üzrə dəyərləndirmə balı: 10</option>
                </select>
            </div>

            <div class="form-group">

                <textarea class="form-control" name="Content" placeholder="Mesajınız..." required=""></textarea>
            </div>

            <button type="submit" class="btn btn-primary submit">Göndər</button>
        </form>
    </div>
</div>