@model IEnumerable<Blog_NTierArchitect.Models.EmployeeViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<p>
    <a href="/Employee/Create" class="btn btn-outline-success">Yeni İşci</a>
</p>
<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Ad</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ID</td>
            <td>@item.Name</td>
            <td>
                <button data-toggle="dropdown" class="btn btn-primary dropdown-toggle">Alətlər</button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item btn btn-warning" href="/Employee/Edit/@item.ID">Düzəliş et</a></li>
                    <li><a class="dropdown-item btn btn-danger" href="/Employee/Delete/@item.ID">Sil</a></li>
                </ul>
            </td>
        </tr>
    }
</table>
